  "patterns": {
    "swarm": {
      "name": "Swarm Pattern",
      "description": "Decentralized multi-agent collaboration where agents self-assign tasks",
      "type": "swarm",
      "use_cases": [
        "CTF solving with multiple specialized agents",
        "Bug bounty triage across multiple targets",
        "Parallel reconnaissance of different attack surfaces"
      ],
      "configuration": {
        "entry_agent": "required",
        "min_agents": 2,
        "max_agents": 10,
        "coordination": "peer_to_peer",
        "handoff": "dynamic"
      },
      "example": "swarm: scan 10 targets in parallel"
    },
    "hierarchical": {
      "name": "Hierarchical Pattern",
      "description": "Top-down delegation from orchestrator to specialized sub-agents",
      "type": "hierarchical",
      "use_cases": [
        "Full security assessment with clear phases",
        "Complex penetration test with escalation stages",
        "Multi-stage research projects"
      ],
      "configuration": {
        "root_agent": "required",
        "min_agents": 2,
        "max_agents": 8,
        "coordination": "centralized",
        "handoff": "sequential_or_conditional"
      },
      "example": "hierarchical: assess target.com with full kill chain"
    },
    "sequential": {
      "name": "Sequential Pattern",
      "description": "Pipeline execution where each agent passes output to the next",
      "type": "sequential",
      "use_cases": [
        "Recon → Exploit → Report workflow",
        "Data collection → Analysis → Visualization",
        "Code → Test → Document pipeline"
      ],
      "configuration": {
        "sequence": "required",
        "min_agents": 2,
        "max_agents": 6,
        "coordination": "pipeline",
        "handoff": "mandatory_sequential"
      },
      "example": "sequential: recon → exploit → report for target.local"
    },
    "parallel": {
      "name": "Parallel Pattern",
      "description": "Multiple agents execute simultaneously on independent tasks",
      "type": "parallel",
      "use_cases": [
        "Scanning multiple targets at once",
        "Running different tests on same target",
        "Independent research on multiple topics"
      ],
      "configuration": {
        "tasks": "required",
        "min_agents": 2,
        "max_agents": 10,
        "coordination": "independent",
        "handoff": "none_or_final_aggregation"
      },
      "example": "parallel: test allOWASP Top 10 on target simultaneously"
    },
    "recursive": {
      "name": "Recursive Pattern",
      "description": "Single agent iteratively refines its own output",
      "type": "recursive",
      "use_cases": [
        "Code debugging with self-correction",
        "Report writing with multiple iterations",
        "Research refinement until satisfaction"
      ],
      "configuration": {
        "agent": "single",
        "max_iterations": 5,
        "evaluation": "self_or_external",
        "handoff": "internal_self_reference"
      },
      "example": "recursive: debug this code until it passes all tests"
    },
    "conditional": {
      "name": "Conditional Pattern",
      "description": "Dynamic routing based on output/conditions",
      "type": "conditional",
      "use_cases": [
        "Vulnerability found → escalate, else → continue",
        "Test passed → merge, failed → debug",
        "Threat detected → alert, else → log"
      ],
      "configuration": {
        "conditions": "required",
        "default_path": "required",
        "evaluation": "per_step",
        "handoff": "conditional"
      },
      "example": "conditional: if SQLi found → exploit artist, else → continue scan"
    }
  },
